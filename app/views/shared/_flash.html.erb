<div class="toast toast-top toast-center">
  <% if notice %>
    <div class="alert alert-success" data-controller="toast">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span><%= notice %></span>
      <div class="flex items-center gap-2">
        <span data-toast-target="countdown" class="text-xs opacity-70">5s</span>
        <button data-action="click->toast#close" class="btn btn-xs btn-ghost p-1">×</button>
      </div>
    </div>
  <% end %>

  <% if alert %>
    <div role="alert" class="alert alert-error" data-controller="toast">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span><%= alert %></span>
      <div class="flex items-center gap-2">
        <span data-toast-target="countdown" class="text-xs opacity-70">5s</span>
        <button data-action="click->toast#close" class="btn btn-xs btn-ghost p-1">×</button>
      </div>
    </div>
  <% end %>
</div>
