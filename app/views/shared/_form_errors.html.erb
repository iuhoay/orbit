<div class="bg-error/10 border border-error/20 rounded-lg p-4 mb-4">
  <div class="flex items-start gap-3">
    <svg class="w-5 h-5 text-error mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
    </svg>
    <div class="flex-1">
      <% if form.object.errors.count == 1 %>
        <p class="text-error text-sm font-medium"><%= form.object.errors.full_messages.first %></p>
      <% else %>
        <p class="text-error text-sm font-medium mb-2">Please fix the following errors:</p>
        <ul class="text-error text-sm space-y-1">
          <% form.object.errors.full_messages.each do |message| %>
            <li class="flex items-start gap-1">
              <span class="block w-1 h-1 bg-error rounded-full mt-2 flex-shrink-0"></span>
              <%= message %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
