<div class="card w-full max-w-sm mx-auto">
  <div class="card-body gap-8">
    <h1 class="text-4xl">Change your password</h1>

    <%= form_with model: current_user, url: password_path, class: "gap-2 flex flex-col" do |form| %>

      <% if form.object.errors.any? %>
        <% form.object.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      <% end %>

      <div>
        <%= form.password_field :password_challenge, class: "input input-bordered w-full", placeholder: "Current Password" %>
      </div>

      <div>
        <%= form.password_field :password, class: "input input-bordered w-full", placeholder: "New Password" %>
      </div>

      <div>
        <%= form.password_field :password_confirmation, class: "input input-bordered w-full", placeholder: "New Password Confirmation" %>
      </div>

      <div>
        <%= form.submit "Change Password", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>
