<div class="card w-full max-w-md mx-auto">
  <div class="card-body gap-8">
    <h1 class="text-4xl">Reset Your Password</h1>

    <%= form_with url: password_reset_path, class: "gap-2 flex flex-col" do |form| %>
      <%= form.email_field :email, class: "input w-full", placeholder: "Email" %>

      <%= form.submit "Reset Password", class: "btn btn-primary w-full" %>
    <% end %>
  </div>
</div>
