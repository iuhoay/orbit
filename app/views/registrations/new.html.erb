<div class="card w-full max-w-md mx-auto">
  <div class="card-body gap-8">
    <h1 class="text-4xl">Sign Up</h1>

    <%= form_with model: @user, url: registration_path, class: "gap-2 flex flex-col" do |form| %>
      <%= form_errors_for(form) %>

      <%= form.email_field :email, class: "input w-full", placeholder: "Email" %>

      <%= form.password_field :password, class: "input w-full", placeholder: "Password" %>

      <%= form.password_field :password_confirmation, class: "input w-full", placeholder: "Password Confirmation" %>

      <%= form.submit "Sign Up", class: "btn btn-primary w-full" %>
    <% end %>

    <div class="flex flex-col gap-2 text-right">
      <%= link_to "Sign In", new_session_path %>
    </div>
  </div>
</div>
